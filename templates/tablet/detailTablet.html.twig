{% extends 'base.html.twig' %}

{% block title %}{{ Tablets.name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-3 mb-4">
            <div class="col-md-4">
                <img src="{{ asset ('image/' ~ Tablets.image) }}" width="500px" height="400px">
            </div>
            <div>
                <h1 class="mt-4 mt-md-0">Name:   {{ Tablets.name }}</h1>
                <h1 class="mt-4 mt-md-0">Brand:  {{ Tablets.brand }}</h1>
                <h1 class="mt-4 mt-md-0">price:  {{ Tablets.price }} $</h1>
            </div>
        </div>
    </div>
{% endblock %}