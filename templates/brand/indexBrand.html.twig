{% extends 'base.html.twig' %}
{% block title %}Brand List{% endblock %}
{% block body %}
<div class="container-fluid">
<a class="btn btn-primary" href="{{ path ('createBrand') }}">Create New Brand</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Brand Name</th>
            <th scope="col">Description</th>
            <th scope="col">Functions</th>
        </tr>
    </thead>
    <tbody>
    {% for brand in Brands %}
        <tr>
            <td scope="row">{{ brand.brandName }}</td>
            <td scope="row">{{ brand.brandDescription }}</td>
           
            <td scope="row"> 
                <a class="btn btn-info" href="{{ path ( 'detailBrand' , {'id' : brand.id } ) }}">Detail</a>
                <a class="btn btn-warning" href="{{ path ( 'updateBrand' , {'id' : brand.id } ) }}">Update</a>
                <a class="btn btn-danger" href="{{ path ( 'deleteBrand' , {'id' : brand.id } ) }}"
                                          onclick = "return confirm('Are you sure to delete ?')"
                >Delete</a>
            </td>
        </tr> 
    {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}

